<p id="notice"><%= notice %></p>

<p>
  <b>Name of bus:</b>
  <%= @bus.name_of_bus %>
</p>

<p>
  <b>Capacity of the bus:</b>
  <%= @bus.capacity %>
</p>
<%= form_tag(@bus, :method => 'get') do %>
  <div class="field">
    Select date of travel:<br />
    <%= collection_select :ticket, :id, Ticket.where("bus_id = ?", @bus.id).group("date_of_trip"),:id,:date_of_trip %>
  </div>
  <div class="actions">
    <%= submit_tag "Show" %>
  </div>
<% end %>

<% if @tickets != nil %>
<b>Listing tickets for bus:</b> <%= @bus.name_of_bus %>
<%= render 'tickets/buses_index' %>
<% end %>
<% if current_user.admin? %>
  <%= link_to 'Edit', edit_bus_path(@bus) %> |
<% end %>
<br />
<%= link_to 'Back to buses', buses_path %>

