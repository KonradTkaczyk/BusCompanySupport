  </div>

  <div class="field">
    <%= f.label :city_from, "City from" %> <br />
    <%= f.text_field :city_from %>
  </div>

  <div class="field">
    <%= f.label :city_to, "City to" %> <br />
    <%= f.text_field :city_to %>
  </div>

  <div class="field">
    <%= f.label :bus_id, "Name of the bus" %><br />
    <%= collection_select :ticket, :bus_id ,@Buses,:id,:name_of_bus %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
